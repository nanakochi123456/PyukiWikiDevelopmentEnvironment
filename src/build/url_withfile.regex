# URL regex with file schme
##################################################################

$regex=<<EOM;
s?
	(?:
		(?:
			(?:https?|ftp|news)
		://)
	|
		(?:file:[/\x5c][/\x5c])
	)
	(?:[-\x5c_.!~*'a-zA-Z0-9;/?:@&=+$,%#]+)
EOM

$regex=~s/[\r\n\t\s]//g;
print $regex;
